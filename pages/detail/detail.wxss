/* pages/detail/detail.wxss */
.nav-arrow{
  height: 64rpx;
  width: 64rpx;
  position: relative;
  top:20rpx;
   flex-grow: 1;
}
.navbar-text{
  margin-left: 20rpx; 
  font-size: 35rpx;
  line-height: 49rpx;
  flex-grow: 1;
  position: relative;
  top:15rpx;
}
.nav-wrapper{
  display: flex;
  align-items: center;
  position: relative;
  border-bottom:1px solid #3396d7;
  padding:40rpx 20rpx;  
}

.main{
  margin: 40rpx 20rpx;
}
.header{
  font-size: 50rpx;
  line-height: 70rpx;
  opacity: 0.8;
}
.info-wrapper{
  display: flex;
  margin: 30rpx auto 80rpx;
  
}
.info-source,.info-date,.info-readCount{
  opacity:0.5;
  font-size:30rpx;
  line-height:42rpx;

}
.info-date{
  margin-left: 30rpx; 
  flex-grow:1;
}
.info-readCount{
  text-align: right;
}

.img{
   width: 100%;
   max-height: 100%;
   margin: 20rpx auto;
}
.p{
  font-size: 35rpx;
  line-height: 49rpx;
  opacity: 0.8;
  margin: 10rpx auto; 
}
.strong{
  font-weight: bold;
  opacity: 0.8;
  font-size: 40rpx;
  line-height: 56rpx;
  margin: 10rpx auto; 
}